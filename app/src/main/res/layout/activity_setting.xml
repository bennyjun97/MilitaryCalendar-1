<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/constraintLayout">
    <ImageButton
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/buttonProfileImage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.050000012"
            app:srcCompat="@drawable/profile" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" android:scaleType="centerCrop"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/inputAffiliation" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonProfileImage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:background="@drawable/rounded_button" android:spinnerMode="dropdown"
            android:textAlignment="center"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/inputAffiliation" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="8dp"
            android:id="@+id/inputEnlistDate" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:background="@drawable/rounded_button" android:layout_marginTop="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/inputEndDate"
            app:layout_constraintTop_toBottomOf="@+id/inputEnlistDate"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:background="@drawable/rounded_button" android:layout_marginTop="8dp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/inputPromotionDate"
            app:layout_constraintTop_toBottomOf="@+id/inputEndDate" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toEndOf="@+id/textView5" android:layout_marginStart="8dp"
            android:background="@drawable/rounded_button" android:layout_marginTop="8dp"/>
    <Button
            android:text="완료"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonComplete" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/inputPromotionDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button_grey" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="초기화"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonInit" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button_grey" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="분류:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/inputAffiliation" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/inputEnlistDate" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/textView5" android:textSize="14sp" android:textStyle="bold"/>
    <TextView
            android:text="입대일:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/inputEnlistDate" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/inputEndDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/textView5" android:textSize="14sp" android:textStyle="bold"/>
    <TextView
            android:text="전역일:"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/inputEndDate" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/inputPromotionDate" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="@+id/textView5" android:textSize="14sp" android:textStyle="bold"/>
    <TextView
            android:text="다음 진급일:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="@+id/inputPromotionDate"
            app:layout_constraintBottom_toBottomOf="@+id/inputPromotionDate"
            android:textSize="14sp" android:textStyle="bold"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.80"/>
</androidx.constraintlayout.widget.ConstraintLayout>