<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/JalnanTextViewStyle"
        tools:context=".activities.main.CalendarActivity" android:background="@color/calendarBackground">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1" android:layout_marginTop="32dp">
            <ImageButton
                    android:layout_width="0dp"
                    android:scaleType="fitCenter"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/menu" android:id="@+id/buttonMenu"
                    android:layout_weight="2" android:background="@null"/>
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/left" android:id="@+id/buttonLeft"
                    android:layout_weight="1" android:scaleType="fitCenter" android:background="@null"
            />
            <TextView
                    android:text="7월"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/dateText" android:layout_weight="3"
                    app:autoSizeTextType="uniform" android:gravity="center"
                    android:textColor="@color/leave" android:textSize="36sp"/>
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/right" android:id="@+id/buttonRight"
                    android:layout_weight="1" android:scaleType="fitCenter" android:background="@null"
            />
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/add" android:id="@+id/buttonAdd"
                    android:layout_weight="2" android:scaleType="fitCenter" android:background="@null"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="0.5" android:layout_marginTop="16dp">
            <TextView
                    android:text="일"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/sunday"
                    app:autoSizeTextType="uniform" android:gravity="center"/>
            <TextView
                    android:text="월"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/monday"
                    app:autoSizeTextType="uniform" android:gravity="center"/>
            <TextView
                    android:text="화"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/tuesday"
                    app:autoSizeTextType="uniform" android:gravity="center"/>
            <TextView
                    android:text="수"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/wednesday"
                    app:autoSizeTextType="uniform" android:gravity="center"/>
            <TextView
                    android:text="목"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/thursday"
                    app:autoSizeTextType="uniform" android:gravity="center"/>
            <TextView
                    android:text="금"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/friday"
                    app:autoSizeTextType="uniform" android:gravity="center"/>
            <TextView
                    android:text="토"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/saturday"
                    app:autoSizeTextType="uniform" android:gravity="center"/>
        </LinearLayout>
        <View
                android:layout_width="wrap_content"
                android:layout_height="0dp" android:id="@+id/view" android:layout_weight="15"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="3" android:background="@android:color/white">
            <TextView
                    android:text="6월 10일"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:id="@+id/textView21" android:layout_weight="1"
                    android:layout_gravity="center" app:autoSizeTextType="uniform" android:gravity="center"
                    android:maxLines="1" android:padding="16dp" android:textColor="@color/calendarButtons"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:layout_weight="2">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>