<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/JalnanTextViewStyle"
        tools:context=".activities.main.CalendarActivity" android:background="@android:color/white">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/calendarView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="#00F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView11"/>

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline21"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.85"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout2">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@color/colorPrimary" android:id="@+id/imageButton"
                android:layout_weight="1" android:scaleType="center" android:background="@null"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@color/CoolBrownLight"
                android:id="@+id/imageButton2" android:layout_weight="1" android:background="@null"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@color/colorAccent" android:id="@+id/imageButton3"
                android:layout_weight="1" android:background="@null"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent" app:srcCompat="@color/skyblue" android:id="@+id/imageButton4"
                android:layout_weight="1" android:background="@null"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="@+id/guideline21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linear">
        <TextView
                android:text="휴가"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                android:layout_gravity="bottom" android:textAlignment="center" android:textSize="22sp"
                android:textColor="@color/black"/>
        <TextView
                android:text="당직"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="1"
                android:layout_gravity="bottom" android:textAlignment="center" android:textSize="22sp"
                android:textColor="@color/black"/>
        <TextView
                android:text="훈련"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView9" android:layout_weight="1"
                android:layout_gravity="bottom" android:textAlignment="center" android:textSize="22sp"
                android:textColor="@color/black"/>
        <TextView
                android:text="개인"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_weight="1"
                android:layout_gravity="bottom" android:textAlignment="center" android:textSize="22sp"
                android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
            android:text="군인맞춤 플래너"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="@color/darkergrass" android:textSize="28sp" android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>