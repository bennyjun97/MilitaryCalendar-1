<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/JalnanTextViewStyle"
        tools:context=".activities.register.SetAffActivity" android:background="@drawable/cool_brown_gradient">
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/guideline7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.25"
            app:layout_constraintEnd_toStartOf="@+id/guideline8"
            android:id="@+id/tableLayout"
            app:layout_constraintBottom_toTopOf="@+id/backAffButton" android:weightSum="4"
            android:layout_marginBottom="8dp">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_weight="1" android:gravity="center">
            <ImageButton
                    android:layout_width="69dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/profile"
                    android:id="@+id/buttonArmy" android:scaleType="fitCenter" android:layout_weight="1"/>
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/profile"
                    android:id="@+id/buttonNavy" android:scaleType="fitCenter" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:gravity="center">
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/profile"
                    android:id="@+id/buttonAir" android:scaleType="fitCenter" android:layout_weight="1"/>
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/profile"
                    android:id="@+id/buttonMarine" android:scaleType="fitCenter" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:gravity="center">
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/profile"
                    android:id="@+id/buttonPolice" android:scaleType="fitCenter" android:layout_weight="1"/>
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/profile"
                    android:scaleType="fitCenter" android:id="@+id/buttonPublic" android:layout_weight="1"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
                  android:gravity="center">
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/profile"
                    android:id="@+id/buttonSeapolice" android:scaleType="fitCenter" android:layout_weight="1"/>
            <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp" app:srcCompat="@drawable/profile"
                    android:id="@+id/buttonFire" android:scaleType="fitCenter" android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline7"
                                                android:orientation="vertical"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintHorizontal_bias="0.5"
                                                app:layout_constraintEnd_toStartOf="@+id/backAffButton"
                                                app:layout_constraintGuide_percent="0.15085158"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline8"
                                                android:orientation="vertical"
                                                app:layout_constraintStart_toEndOf="@+id/nextButton"
                                                app:layout_constraintHorizontal_bias="0.5"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintGuide_percent="0.8515815"/>
    <Button
            android:text="이전"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backAffButton" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline18"
            android:fontFamily="@font/jalnan" app:layout_constraintBottom_toTopOf="@+id/guideline9"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="다음"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextButton" android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/jalnan" app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintStart_toStartOf="@+id/guideline18"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline9"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent=".85"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline18"
            app:layout_constraintGuide_percent="0.50121653"/>
</androidx.constraintlayout.widget.ConstraintLayout>