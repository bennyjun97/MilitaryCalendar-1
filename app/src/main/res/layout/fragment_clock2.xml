<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:theme="@style/JalnanTextViewStyle">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="1.5" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/guideline24"
            android:weightSum="10">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp" app:srcCompat="@drawable/profile"
                android:id="@+id/imageView2" android:layout_weight="3.5" android:layout_gravity="center"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="4.5" android:weightSum="1">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="57dp" android:layout_weight="0.6">
                <TextView
                        android:text="병장"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/rankText" android:layout_weight="1"
                        android:gravity="center|left" android:textSize="24sp" android:textStyle="bold|italic"/>
                <TextView
                        android:text="한성호"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/nameText" android:layout_weight="1"
                        android:gravity="center|left" android:textSize="24sp" android:textStyle="normal"/>
            </LinearLayout>
            <TextView
                    android:text="전역까지 D - 83"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/remainText" android:layout_weight="0.4"
                    android:gravity="center|left" android:textSize="14sp"/>
        </LinearLayout>
        <ImageButton
                android:layout_width="0dp"
                android:layout_height="30dp" android:id="@+id/buttonEdit"
                android:layout_weight="2" android:scaleType="fitCenter" android:background="@null"
                android:layout_marginTop="4dp" android:layout_marginBottom="4dp"
                app:srcCompat="@drawable/setting_widget_white" android:layout_gravity="center"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline24" app:layout_constraintGuide_percent="0.15"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline25" app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline26" app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline27" app:layout_constraintGuide_percent="0.88"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline26" app:layout_constraintTop_toTopOf="@+id/guideline25"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:weightSum="1">
        <TextView
                android:text="국방부 시계는 지금"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_weight="0.3"
                android:gravity="center" android:textSize="24sp"/>
        <TextView
                android:text="20:22:15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/clockText" android:layout_weight="0.7"
                android:gravity="center" android:textStyle="bold" android:textSize="60sp"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline28"
            app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline30"
            app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline29"
            app:layout_constraintGuide_percent="0.1"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/guideline26" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline27" app:layout_constraintEnd_toStartOf="@+id/guideline28"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="@+id/guideline29"
            android:layout_marginStart="8dp" android:gravity="center"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            app:layout_constraintTop_toTopOf="@+id/guideline26" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline27" app:layout_constraintEnd_toStartOf="@+id/guideline30"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline28" android:layout_marginStart="8dp"
            android:gravity="center"/>
</androidx.constraintlayout.widget.ConstraintLayout>