<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:theme="@style/JalnanTextViewStyle">


    <ImageView
            android:layout_width="0dp"
            android:layout_height="60dp" app:srcCompat="@drawable/profilepic"
            android:id="@+id/imageView2" android:layout_weight="3.5" android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline28" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline24" android:layout_marginStart="8dp"/>

    <TextView
            android:text="전역까지 D - 83"
            android:layout_height="wrap_content" android:layout_width="0dp"
            android:id="@+id/remainText" android:layout_weight="0.4"
            android:gravity="center|left" android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/guideline32"
            app:layout_constraintBottom_toBottomOf="@+id/guideline24"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline28"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline33"
            android:layout_marginBottom="8dp"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="30dp" android:id="@+id/buttonEdit"
            android:layout_weight="2" android:scaleType="fitCenter" android:background="@null"
            app:srcCompat="@drawable/setting_widget_white" android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline32" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline24" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.7"/>
    <TextView
            android:text="이병"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rankText"
            android:gravity="center|left" android:textSize="24sp" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/guideline28"
            app:layout_constraintBottom_toTopOf="@+id/remainText"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
    />
    <TextView
            android:text="김호건"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameText"
            android:gravity="center|left" android:textSize="24sp" android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/remainText"
            app:layout_constraintEnd_toStartOf="@+id/guideline32" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/rankText"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="16dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline24" app:layout_constraintGuide_percent="0.15"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline25" app:layout_constraintGuide_percent="0.65"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline26" app:layout_constraintGuide_percent="0.83"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline27" app:layout_constraintGuide_percent="0.88"/>
    <TextView
            android:text="국방부 시계는 지금"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView1" android:layout_weight="0.3"
            android:gravity="center" android:textSize="22sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline25"
            app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline30"/>
    <TextView
            android:text="20:42:15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/clockText" android:layout_weight="0.7"
            android:gravity="center" android:textStyle="bold" android:textSize="50sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline26"
            app:layout_constraintStart_toStartOf="@+id/guideline29" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline30" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline28"
            app:layout_constraintGuide_percent="0.4"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline32"
            app:layout_constraintGuide_percent="0.8"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline31"
            app:layout_constraintGuide_percent="0.5"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline30"
            app:layout_constraintGuide_percent="0.92"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline29"
            app:layout_constraintGuide_percent="0.08"/>
    <TextView
            android:text="현재 계급"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            app:layout_constraintTop_toTopOf="@+id/guideline26"
            app:layout_constraintBottom_toTopOf="@+id/guideline27"
            app:layout_constraintStart_toStartOf="@+id/guideline29"
            android:layout_marginStart="8dp" android:gravity="center"
            app:layout_constraintVertical_bias="0.8" android:textSize="10sp"
            android:textColor="@color/horizontalProgressbarBlue"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline33"
            app:layout_constraintGuide_percent="0.11"/>
    <ProgressBar android:layout_width="0dp" android:layout_height="14dp"
                 style="@android:style/Widget.ProgressBar.Horizontal"
                 android:max="100" android:progressDrawable="@drawable/horizontal_progress"
                 app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/guideline30"
                 app:layout_constraintTop_toTopOf="@id/guideline27" app:layout_constraintStart_toEndOf="@id/guideline29"
                 android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:progress="50"
                 android:id="@+id/progressBar" app:layout_constraintVertical_bias="0.40"/>
    <TextView
            android:text="50.000%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/entirePercentText" app:layout_constraintEnd_toStartOf="@+id/guideline30"
            app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp" android:textSize="10sp"
            android:textColor="@color/horizontalProgressbarRed" app:layout_constraintVertical_bias="0.19999999"/>
    <TextView
            android:text="총 복무율"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text4" app:layout_constraintEnd_toStartOf="@+id/entirePercentText"
            android:layout_marginEnd="4dp" app:layout_constraintTop_toBottomOf="@+id/progressBar"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="10sp"
            android:textColor="@color/horizontalProgressbarRed" app:layout_constraintVertical_bias="0.19999999"/>
    <TextView
            android:text="이병"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rankText2" app:layout_constraintStart_toEndOf="@+id/text"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/guideline26"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/guideline27" app:layout_constraintVertical_bias="0.8"
            android:textColor="@color/horizontalProgressbarBlue"/>
    <TextView
            android:text="13.52%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rankPercentText"
            app:layout_constraintTop_toTopOf="@+id/guideline26"
            app:layout_constraintBottom_toTopOf="@+id/guideline27" app:layout_constraintStart_toEndOf="@+id/rankText2"
            android:layout_marginStart="4dp" android:textColor="@color/horizontalProgressbarBlue"
            app:layout_constraintVertical_bias="0.8" android:textSize="10sp"/>
    <TextView
            android:text="81.66%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/monthPercentText"
            app:layout_constraintTop_toTopOf="@+id/guideline26"
            app:layout_constraintBottom_toTopOf="@+id/guideline27" app:layout_constraintEnd_toStartOf="@+id/guideline30"
            android:layout_marginEnd="8dp"
            app:layout_constraintVertical_bias="0.8" android:textColor="@color/horizontalProgressbarGreen"
            android:textSize="10sp"/>
    <TextView
            android:text="1호봉"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/monthText" app:layout_constraintTop_toTopOf="@+id/guideline26"
            app:layout_constraintBottom_toTopOf="@+id/guideline27"
            app:layout_constraintEnd_toStartOf="@id/monthPercentText"
            app:layout_constraintVertical_bias="0.8" android:layout_marginEnd="4dp"
            android:textColor="@color/horizontalProgressbarGreen" android:textSize="10sp"/>
    <TextView
            android:text="이병"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/rankText3" app:layout_constraintTop_toTopOf="@+id/guideline26"
            app:layout_constraintBottom_toTopOf="@+id/guideline27" app:layout_constraintEnd_toStartOf="@id/monthText"
            app:layout_constraintVertical_bias="0.8" android:layout_marginEnd="4dp"
            android:textColor="@color/horizontalProgressbarGreen" android:textSize="10sp"/>
    <TextView
            android:text="현재 호봉"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/Text4" app:layout_constraintTop_toTopOf="@+id/guideline26"
            app:layout_constraintBottom_toTopOf="@+id/guideline27" app:layout_constraintEnd_toStartOf="@id/rankText3"
            app:layout_constraintVertical_bias="0.8" android:layout_marginEnd="4dp"
            android:textColor="@color/horizontalProgressbarGreen" android:textSize="10sp"
    />
    <com.kyminbb.militarycalendar.utils.ClockView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/clockView"
            app:layout_constraintBottom_toTopOf="@+id/guideline25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline24"
            android:layout_marginTop="16dp" android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>